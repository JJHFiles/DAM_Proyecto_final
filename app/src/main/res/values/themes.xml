<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DAM_Proyecto_final" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>


    </style>

    <!--    Button primary-->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/primary_textcolor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">-0</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:height">48dp</item>
    </style>

    <!--    Button secondary-->
    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">-0</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:height">48dp</item>
    </style>

