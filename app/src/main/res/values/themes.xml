<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DAM_Proyecto_final" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>


    </style>

    <!--    Button primary-->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_textcolor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">-0</item>
        <item name="backgroundTint">@null</item>

        <item name="android:background">@drawable/round_button</item>
        <item name="android:height">48dp</item>
    </style>

    <!--    Button secondary-->
    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">-0</item>
        <item name="android:background">@drawable/round_button_white</item>
        <item name="android:height">48dp</item>
    </style>

    <!--    Button secondary-->
    <style name="TerciaryButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">-0</item>
        <item name="android:background">@drawable/round_button_red</item>
        <item name="android:height">48dp</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/secondary_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">filled</item>
    </style>

    <style name="ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/secondary_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">filled</item>
    </style>

    <style name="CheckRadio" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/round_checkradio</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/round_checkradio</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>