<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <FrameLayout
        android:id="@+id/fl_fai_layactivityico"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle_colour"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/imgv_fai_activityico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:src="@drawable/ic_activity"
        />


    </FrameLayout>


    <TextView
        android:id="@+id/txtv_fai_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@id/fl_fai_layactivityico"
        app:layout_constraintTop_toTopOf="@+id/fl_fai_layactivityico"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/invoice_added"/>

    <TextView
        android:id="@+id/txtv_fai_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:textAlignment="textStart"
        android:textColor="#99000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/fl_fai_layactivityico"
        app:layout_constraintTop_toBottomOf="@+id/txtv_fai_action"
        app:layout_constraintVertical_bias="0.0"
        tools:text="@string/input_date" />



</androidx.constraintlayout.widget.ConstraintLayout>